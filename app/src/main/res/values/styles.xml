<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--去掉原来的ActionBar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- API Level 22 编译要去点android -->
        <item name="windowNoTitle">true</item>
        <!--<item name="android:actionBarSize">10dp</item>-->
    </style>
    <!--自定义toolbar菜单样式-->
    <style name="toolbarMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">

        <item name="android:actionMenuTextColor">@color/color_white</item>

        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->j
        <item name="overlapAnchor">false</item>

        <!--<item name="android:dropDownWidth">wrap_content</item>-->

        <!--<item name="android:paddingRight">-20dp</item>-->

        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/material_deep_teal_500</item>

        <!-- 弹出层垂直方向上的偏移，负值会覆盖toolbar -->
        <item name="android:dropDownVerticalOffset">2dp</item>

        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-2dp</item>

        <!--文字颜色-->
        <item name="android:textColor">@color/color_white</item>
    </style>
    <!-- toolbar标题文字大小 -->
    <style name="ToolbarTitleSize" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="actionMenuTextColor">@color/color_white</item> <!--  敲定颜色-->
        <item name="android:textSize">14sp</item> <!--Menu字体大小-->
        <item name="android:textColorPrimary">@color/color_white</item><!--Tittle字体颜色-->
        <item name="colorPrimary">@color/color_lvse</item><!--toolbar背景颜色-->
        <item name="android:actionBarSize">50dp</item><!--toolbar高度-->
        <!--指定toolbar弹出菜单样式-->
        <item name="actionOverflowMenuStyle">@style/toolbarMenuStyle</item>
    </style>
</resources>
